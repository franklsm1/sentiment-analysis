{
  "name": "sentiment-analysis",
  "version": "1.0.0",
  "description": "Sentiment analysis of tweets based on a keyword with a UI",
  "main": "index.js",
  "scripts": {
    "build-zip": "./build.sh",
    "client": "cd client && yarn start",
    "client-test": "cd client && yarn test",
    "local": "concurrently --kill-others-on-fail \"yarn nodemon\" \"yarn client\"",
    "migrate": "NODE_ENV=$NODE_ENV knex migrate:latest",
    "nodemon": "nodemon server.js --exec babel-node",
    "rollback": "NODE_ENV=$NODE_ENV knex migrate:rollback",
    "start": "babel-node server.js",
    "test": "jest --coverage --forceExit && yarn client-test"
  },
  "author": "Sean Franklin <franklsm1@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "https-proxy-agent": "^2.2.2",
    "knex": "^0.15.2",
    "mysql": "^2.16.0",
    "node-fetch": "^2.6.0",
    "sentiment": "^5.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "concurrently": "^3.6.0",
    "fetch-mock": "^7.3.9",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "nodemon": "^1.18.3",
    "pre-commit": "^1.2.2"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 85,
        "functions": 100,
        "lines": 100
      }
    },
    "testURL": "http://localhost/",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/client/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  }
}
